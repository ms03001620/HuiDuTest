<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkDeviceOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="是否是设备拥有者(Device Owner)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="授权\nadb shell dpm set-device-owner com.example.huidutest/.lib.KioskDeviceAdminReceiver" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkLockSysBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="是否锁定系统栏" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_marginTop="30dp"
        android:id="@+id/checkHideSysBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="是否隐藏系统栏" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="授权\nadb shell pm grant com.example.huidutest android.permission.WRITE_SECURE_SETTINGS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="撤销授权\nadb shell pm revoke com.example.huidutest android.permission.WRITE_SECURE_SETTINGS" />


</LinearLayout>
